<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SteeringMariaMaui.LedSettingsPage">
			 
   <ScrollView>
   <VerticalStackLayout Margin="20" >
   <Label Text="LED:" FontAttributes = "Bold" />
   <Picker x:Name="SourceSelector"
      Title="Light:">
        <Picker.Items/>
   </Picker>
    <Grid x:Name="AllLedStatus">
       <Grid.RowDefinitions>
          <RowDefinition />
          <RowDefinition />
          <RowDefinition />
        </Grid.RowDefinitions>
       <Grid.ColumnDefinitions>
          <ColumnDefinition />
          <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Text="Channel (-1 zo 15)"/>
        <Entry x:Name="entry" Placeholder="-1" TextChanged="OnChannelTextChanged" Completed="OnChannelCompleted" Grid.Row="0" Grid.Column="1"  />
        <Label Grid.Row="1" Grid.Column="0" Text="Brightnes"/>
        <Slider Maximum="4095" ValueChanged="OnBrightnesSliderValueChanged" Grid.Row="1" Grid.Column="1"/>        
    </Grid>
    </VerticalStackLayout>
    
    </ScrollView>
 
</ContentPage>
